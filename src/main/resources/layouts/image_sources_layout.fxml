<GridPane xmlns:fx="http://javafx.com/fxml" fx:id="root" stylesheets="@../css/style.css" fx:controller="com.nocmok.pancakegui.controls.ImageSourcesController">
    <Label fx:id="headerLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" textAlignment="CENTER">
        Sources
    </Label>
    <VBox fx:id="sourceVBox" GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="5">
        <fx:include fx:id="source" source="image_source_layout.fxml" />
    </VBox>
    <Button fx:id="addSourceButton" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="pnk-button">
        Add source
    </Button>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" fillWidth="true" halignment="CENTER" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" fillHeight="true" maxHeight="50" valignment="CENTER" />
        <RowConstraints vgrow="SOMETIMES" fillHeight="true" valignment="TOP" />
        <RowConstraints vgrow="SOMETIMES" fillHeight="false" maxHeight="100" valignment="CENTER" />
    </rowConstraints>
</GridPane>